<Controls:MetroWindow x:Class="alesya_rassylka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        Title="ATLANT" Height="600" Width="900" WindowStartupLocation="CenterScreen"
        Background="#DFE3EB"
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow">



    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Анимация при наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3050A5"/>
                            </Trigger>
                            <!-- Анимация при нажатии -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="175*"/>
        </Grid.ColumnDefinitions>
        <!-- Левая панель -->
        <Border Background="#172A74" Width="250" HorizontalAlignment="Left" 
        BorderBrush="Transparent" BorderThickness="0,0,1,1" 
        CornerRadius="0,15,15,0" Grid.ColumnSpan="3">
            <DockPanel Width="250" HorizontalAlignment="Left">
                <!-- Стекпанель, чтобы разместить элементы сверху вниз -->
                <StackPanel>
                    <!-- Белый прямоугольник с закругленными углами для фона надписи -->
                    <Border Background="White" CornerRadius="15" Margin="10" Padding="10" Height="53">
                        <TextBlock Text="ATLANT" FontSize="28" FontWeight="Bold" Foreground="#172A74" VerticalAlignment="Center" HorizontalAlignment="Center" Width="118"/>
                    </Border>

                    <!-- Кнопки, расположенные под надписью -->
                    <StackPanel Margin="10,0,10,10">
                        <Button Content="Предложение о сотрудничестве" Style="{StaticResource MenuButton}" Height="40" Width="224"/>
                        <Button Content="Специальные условия для оптовиков" Style="{StaticResource MenuButton}"/>
                        <Button Content="Анонс новой продукции для оптовиков" Style="{StaticResource MenuButton}"/>
                        <Button Content="Специальные акции для оптовиков" Style="{StaticResource MenuButton}"/>
                        <Button Content="Информация о логистике и доставке" Style="{StaticResource MenuButton}"/>
                        <Button Content="Приглашение на встречу или выставку" Style="{StaticResource MenuButton}"/>
                        <Button Content="Образовательный контент для закупщиков" Style="{StaticResource MenuButton}"/>
                        <Button Content="Благодарность за сотрудничество" Style="{StaticResource MenuButton}" Height="44"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>





        <!-- Основное содержимое -->
        <StackPanel Margin="122,10,10,10" Grid.ColumnSpan="4" Grid.Column="2" RenderTransformOrigin="0.5,0.5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10" Height="38">
                <TextBlock FontSize="14" Foreground="#172A74" Margin="0,0,20,0">
    <Hyperlink NavigateUri="#" RequestNavigate="Hyperlink_RequestNavigate">Настройки</Hyperlink>
                </TextBlock>
                <TextBlock FontSize="14" Foreground="#172A74" Margin="0,0,20,0" Height="51">
    <Hyperlink NavigateUri="#" RequestNavigate="Hyperlink_RequestNavigate">Справка</Hyperlink>
                </TextBlock>
                <TextBlock FontSize="14" Foreground="#172A74">
    <Hyperlink NavigateUri="#" RequestNavigate="Hyperlink_RequestNavigate">О программе</Hyperlink>
                </TextBlock>

            </StackPanel>

            <TextBox x:Name="MessageTextBox" Height="288" Background="White" BorderBrush="#172A74" BorderThickness="1">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>


            <StackPanel Orientation="Vertical" Margin="0,20,0,0" Height="92">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,5,0,0">
                    <TextBlock Text="Отправитель" FontWeight="Bold" VerticalAlignment="Center" Width="150"/>
                    <Border Background="White" BorderBrush="#172A74" BorderThickness="1" CornerRadius="5" Width="478">
                        <TextBox x:Name="SenderTextBox" Background="Transparent" BorderThickness="0" Padding="5" Margin="0,0,0,0"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,25,0,0">
                    <TextBlock Text="Получатель" FontWeight="Bold" VerticalAlignment="Center" Width="150"/>
                    <Border Background="White" BorderBrush="#172A74" BorderThickness="1" CornerRadius="5">
                        <TextBox x:Name="RecipientTextBox" Background="Transparent" BorderThickness="0" Padding="5" Width="476" RenderTransformOrigin="0.504,0.596"/>
                    </Border>
                </StackPanel>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                <Button Content="Отправить письмо" Width="150" Background="White" Foreground="#172A74" Height="38"/>
                <Button Content="Отменить" Width="142" Background="White" Foreground="#172A74" Margin="20,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Controls:MetroWindow>
