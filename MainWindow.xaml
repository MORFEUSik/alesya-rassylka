<Window x:Class="alesya_rassylka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:alesya_rassylka"
        mc:Ignorable="d"
        Title="Рассылка сообщений" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите получателя:" Margin="10"/>
        <ComboBox x:Name="RecipientsComboBox" Grid.Row="1" Margin="10" Height="25"/>

        <TextBlock Text="Введите сообщение:" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="MessageTextBox" Grid.Row="2" Margin="10,30,10,10" Height="100" AcceptsReturn="True"/>

        <Button x:Name="SendButton" Grid.Row="3" Content="Отправить" Margin="10" Height="30" Click="SendButton_Click"/>
    </Grid>
</Window>
