<Controls:MetroWindow x:Class="alesya_rassylka.TemplateEditWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Title="Управление шаблонами" Height="500" Width="600"
                      TitleCharacterCasing="Normal"
                      TitleForeground="#172A74"
                      BorderBrush="#172A74" BorderThickness="1"
                      WindowStartupLocation="CenterOwner"
                      Background="#DFE3EB"
                      ResizeMode="NoResize"
                      WindowStyle="SingleBorderWindow"
                      Icon="/icons8-почта-100.png">

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#172A74"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Arial Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#172A74"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                              TextBlock.TextAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E6F8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C0D0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="#172A74"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#172A74"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="White"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Название шаблона и кнопка сохранить -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Название шаблона:" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Foreground="#172A74"/>
            <TextBox x:Name="TemplateNameTextBox" Margin="10,0,0,0" FontSize="14" Width="300" Style="{StaticResource InputTextBoxStyle}"/>
            <Button Content="Сохранить" Margin="10,0,0,0" Click="Save_Click" Style="{StaticResource ActionButton}" Width="104"/>
        </StackPanel>

        <!-- Содержимое шаблона -->
        <TextBox x:Name="TemplateContentTextBox"
                 Grid.Row="1"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto"
                 FontSize="14"
                 Style="{StaticResource InputTextBoxStyle}"
                 TextWrapping="Wrap"/>
    </Grid>
</Controls:MetroWindow>
